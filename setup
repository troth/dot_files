#!/bin/bash
#
# Script to setup dot files in $HOME from _* files/dirs in dot_files repo.
#

unalias ls

BASE="${PWD#${HOME}/}"

cd $HOME

for tgt in ${BASE}/_*
do
    lnk="$(basename ${tgt})"
    lnk=".${lnk#_}"

    if [ -e ${lnk} ]
    then
        if [ -L ${lnk} ]
        then
            echo "skip: symlink exists:              ${lnk} "
        else
            echo "skip: file exists (not a symlink): ${lnk}"
        fi
        continue
    fi

    if [ -L ${lnk} ]
    then
        echo "Removing broken link: ${lnk}"
        rm ${lnk}
    fi

    echo ln -s ${tgt} ${lnk}
    ln -s ${tgt} ${lnk}
done
